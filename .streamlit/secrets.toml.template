# Streamlit Secrets Template
# Create this file at .streamlit/secrets.toml for deployment

[secrets]
OPENAI_API_KEY = "your-openai-api-key-here"
ADMIN_PW = "secure-admin-password-here"

# Optional: Database connection for production
DATABASE_URL = "postgresql://user:password@host:port/database"

# Optional: Rate limiting configuration
MAX_QUERIES_PER_HOUR = 10
MAX_TOKENS_PER_DAY = 5000

# IMPORTANT NOTES:
# 1. Never commit this file to git
# 2. Each deployment environment needs its own secrets
# 3. Use strong passwords for ADMIN_PW
# 4. Monitor OpenAI API usage closely